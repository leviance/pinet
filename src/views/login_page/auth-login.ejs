<!doctype html>
<html lang="en">

    <head>
        
        <meta charset="utf-8" />
        <title>Đăng nhập | Pinet </title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- App favicon -->
        <link rel="shortcut icon" href="/assets/images/favicon.ico">

        <!-- Bootstrap Css -->
        <link href="/assets/css/bootstrap-dark.min.css" id="bootstrap-dark-style" rel="stylesheet" type="text/css" />
        <link href="/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
        <!-- Icons Css -->
        <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
        <!-- App Css-->
        <link href="/assets/css/app-dark.min.css" id="app-dark-style" rel="stylesheet" type="text/css" />
        <link href="/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

        <!-- css loading modal -->
        <link rel="stylesheet" href="/custom/css/three-dots.min.css">
        <!-- font-awesome 4 -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        <style>
            #login-with-other-app{
                display: flex;
                justify-content: center;
                padding:0;
            }
            #login-with-other-app .login-with-facebook{
                display: flex;
                justify-content: center;
                align-items: center;
                width: 35px;
                height: 35px;
                background-color:#1877f2;
                border-radius: 50%;
            }
            #login-with-other-app a:nth-child(1){padding-right: 10px;}
            #login-with-other-app .login-with-google{
                display: flex;
                justify-content: center;
                align-items: center;
                width: 35px;
                height: 35px;
                background-color:#e0584a;
                border-radius: 50%;
            }

            #login-with-other-app .login-with-google i{
                color: white;
            }

            #login-with-other-app .login-with-facebook i{
                color: white;
            }
        </style>

        <%- include('../loading_modal/loading.ejs')  %> 

        <div class="account-pages my-5 pt-sm-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="text-center mb-4">
                            <a href="/" class="auth-logo mb-5 d-block">
                                <!-- <img src="/assets/images/logo.svg" alt="" height="30" class="logo logo-dark"> -->
                                <img src="assets/images/logo-dark.png" alt="" height="30" class="logo logo-dark">
                                <img src="assets/images/logo-light.png" alt="" height="30" class="logo logo-light">
                            </a>

                            <h4>Đăng nhập</h4>
                            <p class="text-muted mb-4">Hãy đăng nhập để chat cùng pinet</p>
                            
                        </div>

                        <div class="card">
                            <div class="card-body p-4">
                                <div class="p-3">
                                    <form action="javascript:void(0);">
    
                                        <div id="login-input-name-account-group" class="form-group">
                                            <label>Tài khoản</label>
                                            <div class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text border-light text-muted">
                                                        <i class="ri-user-2-line"></i>
                                                    </span>
                                                </div>
                                                <input id="login-user-input-name-account" type="text" class="form-control bg-soft-light border-light" placeholder="Nhập vào tên tài khoản">
                                                
                                            </div>
                                        </div>

                                        <div class="form-group mb-4">
                                            <div class="float-right">
                                                <a href="/recover" class="text-muted font-size-13">Quên mật khẩu?</a>
                                            </div>
                                            <label>Mật khẩu</label>
                                            <div id="login-input-password-group" class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text border-light text-muted">
                                                        <i class="ri-lock-2-line"></i>
                                                    </span>
                                                </div>
                                                <input id="login-input-user-password" type="password" class="form-control bg-soft-light border-light" placeholder="Nhập vào mật khẩu">
                                                
                                            </div>
                                        </div>

                                        <div id="login-with-other-app" class="custom-control custom-checkbox mb-4">
                                            <a href="/auth/facebook">
                                                <div class="login-with-facebook">
                                                    <i class="fa fa-facebook" aria-hidden="true"></i>
                                                </div>
                                            </a>
                                            <a href="/auth/google">
                                                <div class="login-with-google">
                                                    <i class="fa fa-google" aria-hidden="true"></i>
                                                </div>
                                            </a>
                                        </div>

                                        <!-- <div class="custom-control custom-checkbox mb-4">
                                            <input type="checkbox" class="custom-control-input" id="remember-check">
                                            <label class="custom-control-label" for="remember-check">Ghi nhớ</label>
                                        </div> -->

                                        <div>
                                            <button id="login-button-submit" class="btn btn-primary btn-block waves-effect waves-light" >Đăng nhập</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="mt-5 text-center">
                            <p>Bạn chưa có tài khoản ? <a href="/register" class="font-weight-medium text-primary"> Đăng ký </a> </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <!-- JAVASCRIPT -->
        <script src="/assets/libs/jquery/jquery.min.js"></script>
        <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/assets/libs/simplebar/simplebar.min.js"></script>
        <script src="/assets/libs/node-waves/waves.min.js"></script>

        <script src="/assets/js/app.js"></script>

        <!-- custom javascript -->
        <script src="/custom/js/auth_page/user_login.js"></script>
    </body>
</html>
